<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <!-- AI Action Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnChatGPT"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ’¬ ChatGPT"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/action_button_background"/>

            <Button
                android:id="@+id/btnHumanize"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ‘¤ Humanize"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/action_button_background"/>

            <Button
                android:id="@+id/btnReply"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="â†©ï¸ Reply"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/action_button_background"/>

            <Button
                android:id="@+id/btnIdioms"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ“š Idioms"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/action_button_background"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Result Output -->
    <TextView
        android:id="@+id/aiOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AI-generated text will appear here..."
        android:textColorHint="@color/kb_text_secondary"
        android:textColor="@color/kb_text_primary"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/input_text_background"/>

    <!-- Replace Button -->
    <Button
        android:id="@+id/btnReplaceAIText"
        android:text="Replace Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="24dp"
        android:background="@drawable/action_button_background"/>

</LinearLayout>

