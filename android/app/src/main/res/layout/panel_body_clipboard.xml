<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Section Title -->
    <TextView
        android:id="@+id/clipboardHeaderTitle"
        android:text="Recent Clips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/kb_text_primary"
        android:paddingBottom="8dp"/>

    <!-- Clipboard Items -->
    <LinearLayout
        android:id="@+id/clipboardItemsContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Clip Item 1 -->
        <TextView
            android:id="@+id/clipItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I dont like agquuq"
            android:textColor="@color/kb_text_primary"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/input_text_background"/>

        <!-- Clip Item 2 -->
        <TextView
            android:id="@+id/clipItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ahajab"
            android:textColor="@color/kb_text_primary"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/input_text_background"/>

        <!-- Clip Item 3 -->
        <TextView
            android:id="@+id/clipItem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I dint like"
            android:textColor="@color/kb_text_primary"
            android:textSize="14sp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/input_text_background"/>
    </LinearLayout>

</LinearLayout>

