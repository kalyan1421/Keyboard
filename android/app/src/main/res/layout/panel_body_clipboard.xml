<?xml version="1.0" encoding="utf-8"?>
<!-- âœ… UNIFIED THEMING: Transparent background -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:paddingBottom="16dp"
    android:background="@android:color/transparent">

    <!-- Header with Clear All button and toggle -->
    <LinearLayout
        android:id="@+id/clipboardHeader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:visibility="gone">
        
        <!-- Clear All Button (Left side) -->
        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Clear All"
            android:textSize="13sp"
            android:textColor="#FF0000"
            android:paddingHorizontal="16dp"
            android:background="@drawable/action_button_background"/>
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        
        <!-- Toggle/Settings (Right side - placeholder) -->
        <LinearLayout
            android:id="@+id/clipboardToggleContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- Toggle items can be added here dynamically -->
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Clipboard Items Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/clipboardItemsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">
            <!-- Items will be added dynamically -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>

