<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emojiPanelRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/kb_panel_bg"
    android:clipToPadding="false">

    <!-- Emoji Toolbar with Search and Controls -->
    <LinearLayout
        android:id="@+id/emojiToolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <!-- Search Input -->
        <EditText
            android:id="@+id/emojiSearchInput"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:hint="Search emojis..."
            android:textSize="14sp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/input_text_background"
            android:inputType="text"
            android:imeOptions="actionSearch" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/emojiSearchBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_search"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Search" />

        <!-- Delete Button -->
        <ImageView
            android:id="@+id/btnEmojiDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_input_delete"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete" />

        <!-- ABC Button -->
        <TextView
            android:id="@+id/btnEmojiToABC"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:text="ABC"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/action_button_background"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- ðŸ”¹ Top Action Chips (similar to AI Writing Assistant) -->
    <HorizontalScrollView
        android:id="@+id/emojiCategoryScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/emojiCategories"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp">

            
        </LinearLayout>
    </HorizontalScrollView>

    <!-- ðŸ”¹ Result Display Area (shows selected or searched emojis) -->
    <TextView
        android:id="@+id/emojiOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your selected emojis will appear here..."
        android:textColorHint="@color/kb_text_secondary"
        android:textColor="@color/kb_text_primary"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/input_text_background" />

    <!-- ðŸ”¹ Emoji Grid or Suggestions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/emojiGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:paddingHorizontal="6dp"
        android:paddingTop="4dp"
        android:clipToPadding="false"
        android:background="@android:color/transparent"/>

    <!-- ðŸ”¹ Bottom Action Buttons (consistent with AI panel style) -->
    <LinearLayout
        android:id="@+id/emojiFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp">

        <Button
            android:id="@+id/btnInsertEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert Emoji"
            android:textSize="14sp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/action_button_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClearSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="14sp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/action_button_background" />
    </LinearLayout>

</LinearLayout>
