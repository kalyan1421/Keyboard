<?xml version="1.0" encoding="utf-8"?>
<!-- âœ… UNIFIED THEMING: Transparent background -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@android:color/transparent">

    

    <HorizontalScrollView
        android:id="@+id/toneScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        
        <LinearLayout
            android:id="@+id/toneButtonContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnFunny"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ˜„ Funny"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/action_button_background"/>

            <Button
                android:id="@+id/btnPoetic"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="âœ¨ Poetic"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/action_button_background"/>

            <Button
                android:id="@+id/btnShorten"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ“ Shorten"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/action_button_background"/>

            <Button
                android:id="@+id/btnSarcastic"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ˜ Sarcastic"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/action_button_background"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Result Outputs - 3 Variations -->
    <TextView
        android:id="@+id/toneOutput1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:hint="Tap to see first variation..."
        android:textColorHint="@color/kb_text_secondary"
        android:textColor="@color/kb_text_primary"
        android:textSize="15sp"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/input_text_background"/>

    <TextView
        android:id="@+id/toneOutput2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:hint="Tap to see second variation..."
        android:textColorHint="@color/kb_text_secondary"
        android:textColor="@color/kb_text_primary"
        android:textSize="15sp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/input_text_background"/>

    <TextView
        android:id="@+id/toneOutput3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:hint="Tap to see third variation..."
        android:textColorHint="@color/kb_text_secondary"
        android:textColor="@color/kb_text_primary"
        android:textSize="15sp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/input_text_background"/>

</LinearLayout>

