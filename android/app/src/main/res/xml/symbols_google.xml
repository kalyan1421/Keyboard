<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0dp"
    android:verticalGap="1dp"
    android:keyHeight="@dimen/key_height">
    
    <!-- First row: Numbers 1234567890 -->
    <Row android:rowEdgeFlags="top">
        <Key android:codes="49" android:keyLabel="1" android:keyWidth="10%p" android:keyEdgeFlags="left"/>
        <Key android:codes="50" android:keyLabel="2" android:keyWidth="10%p"/>
        <Key android:codes="51" android:keyLabel="3" android:keyWidth="10%p"/>
        <Key android:codes="52" android:keyLabel="4" android:keyWidth="10%p"/>
        <Key android:codes="53" android:keyLabel="5" android:keyWidth="10%p"/>
        <Key android:codes="54" android:keyLabel="6" android:keyWidth="10%p"/>
        <Key android:codes="55" android:keyLabel="7" android:keyWidth="10%p"/>
        <Key android:codes="56" android:keyLabel="8" android:keyWidth="10%p"/>
        <Key android:codes="57" android:keyLabel="9" android:keyWidth="10%p"/>
        <Key android:codes="48" android:keyLabel="0" android:keyWidth="10%p" android:keyEdgeFlags="right"/>
    </Row>
    
    <!-- Second row: @#$%&*-+()  -->
    <Row>
        <Key android:codes="64" android:keyLabel="@" android:keyWidth="10%p" android:keyEdgeFlags="left"/>
        <Key android:codes="35" android:keyLabel="#" android:keyWidth="10%p"/>
        <Key android:codes="36" android:keyLabel="$" android:keyWidth="10%p"/>
        <Key android:codes="37" android:keyLabel="%" android:keyWidth="10%p"/>
        <Key android:codes="38" android:keyLabel="&amp;" android:keyWidth="10%p"/>
        <Key android:codes="42" android:keyLabel="*" android:keyWidth="10%p"/>
        <Key android:codes="45" android:keyLabel="-" android:keyWidth="10%p"/>
        <Key android:codes="43" android:keyLabel="+" android:keyWidth="10%p"/>
        <Key android:codes="40" android:keyLabel="(" android:keyWidth="10%p"/>
        <Key android:codes="41" android:keyLabel=")" android:keyWidth="10%p" android:keyEdgeFlags="right"/>
    </Row>
    
    <!-- Third row: =/*<>[]{}^~\ + Backspace -->
    <Row>
        <Key android:codes="61" android:keyLabel="=" android:keyWidth="7.5%p" android:keyEdgeFlags="left"/>
        <Key android:codes="47" android:keyLabel="/" android:keyWidth="7.5%p"/>
        <Key android:codes="42" android:keyLabel="*" android:keyWidth="7.5%p"/>
        <Key android:codes="60" android:keyLabel="&lt;" android:keyWidth="7.5%p"/>
        <Key android:codes="62" android:keyLabel="&gt;" android:keyWidth="7.5%p"/>
        <Key android:codes="91" android:keyLabel="[" android:keyWidth="7.5%p"/>
        <Key android:codes="93" android:keyLabel="]" android:keyWidth="7.5%p"/>
        <Key android:codes="123" android:keyLabel="{" android:keyWidth="7.5%p"/>
        <Key android:codes="125" android:keyLabel="}" android:keyWidth="7.5%p"/>
        <Key android:codes="92" android:keyLabel="\" android:keyWidth="7.5%p"/>
        <Key android:codes="-5" 
             android:keyIcon="@drawable/sym_keyboard_delete" 
             android:keyWidth="25%p" 
             android:keyEdgeFlags="right" 
             android:isRepeatable="true"/>
    </Row>
    
    <!-- Bottom row: ABC + Globe + Emoji + Space + Comma + Enter -->
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-11" 
             android:keyLabel="ABC" 
             android:keyWidth="13%p" 
             android:keyEdgeFlags="left"/>
        <Key android:codes="-14" 
             android:keyLabel="ðŸŒ" 
             android:keyWidth="10%p"/>
        <Key android:codes="-15" 
             android:keyLabel="ðŸ˜Š" 
             android:keyWidth="10%p"/>
        <Key android:codes="32" 
             android:keyLabel=" "
             android:keyWidth="40%p" 
             android:isRepeatable="true"/>
        <Key android:codes="44" android:keyLabel="," android:keyWidth="10%p"/>
        <Key android:codes="-4" 
             android:keyIcon="@drawable/sym_keyboard_enter" 
             android:keyWidth="17%p" 
             android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>
