<?xml version="1.0" encoding="utf-8"?>
<!-- Gboard-style popup background for accent options -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <!-- Main background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gboard_suggestion_background"/>
            <corners android:radius="12dp"/>
            <stroke android:width="0.5dp" android:color="@color/gboard_key_border"/>
        </shape>
    </item>
</layer-list>
